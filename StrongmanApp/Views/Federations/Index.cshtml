@model IEnumerable<StrongmanApp.Models.Federation>

@{
    ViewData["Title"] = "Federations";
}

<h1 style="text-align:center">Federations</h1>
@if (User.IsInRole("admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberofContests)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstYearHeld)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastYearHeld)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberofContests)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstYearHeld)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastYearHeld)
            </td>
                @if (User.IsInRole("admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
                else
                {
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                }
                
        </tr>
}
    </tbody>
</table>
