@model StrongmanApp.Models.Competition

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Competition</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Division)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Division)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CompScale)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompScale)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Federation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Federation.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Town)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Town.Name)
        </dd>
        
    </dl>
</div>
@if (Model.VideoUrl != null)
{
        <div>
            <iframe allow="fullscreen" src="@Html.DisplayFor(model => model.VideoUrl)">
            </iframe>
        </div>
}
@if (User.IsInRole("admin"))
{
    <div>
        <a asp-controller="CompetitionEvent" asp-action="Index" asp-route-id="@Model?.Id">Events for the competition</a> |
        <a asp-controller="LineupsComp" asp-action="Index" asp-route-id="@Model?.Id">Lineup</a> |
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
}
else
{
    <div>
        <a asp-controller="CompetitionEvent" asp-action="Index" asp-route-id="@Model?.Id">Events for the competition</a> |
        <a asp-controller="LineupsComp" asp-action="Index" asp-route-id="@Model?.Id">Lineup</a> |
        <a asp-action="Index">Back to List</a>
    </div>
}

